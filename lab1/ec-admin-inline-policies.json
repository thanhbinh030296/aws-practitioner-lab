{
	"Version": "2012-10-17",
	"Statement": [
		{
			"Sid": "ec2admin",
			"Effect": "Allow",
			"Action": [
                "ec2:DescribeInstances",
                "ec2:StartInstances",
                "ec2:StopInstances"
            ],
			
			"Resource": [
				"*"	
			],
			"_comment":"inside Resource [] arn:aws:ec2:{Region}:{Account}:instance/{InstanceId}"
		}
	]
}

	
	